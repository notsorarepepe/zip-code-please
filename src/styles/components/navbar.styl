
nav
    
    position fixed
    display flex
    justify-content center
    top 0
    left 0
    right 0
    width 100%
    min-height 56px
    
    ul
        
        display flex
        flex-direction row
        justify-content flex-start
        width 100%
        max-width 34em
        margin 0
        padding 10px 4px
        
        li
            align-self center
            list-style none
            margin 0
            padding 20px 10px
            
            a, a:link, a:active, a:visited,
            a:hover, a:active:hover, a:visited:hover
                display block
                align-self center
                color #111
                text-decoration none
                text-transform uppercase
            
            .back-arrow
                display block
                align-self center
                width 
                font-family Arial, sans-serif
